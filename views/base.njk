<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="/style/bulma.min.css"/>
    <link rel="stylesheet" href="/style/main.css"/>
    <link rel="stylesheet" href="/style/vanillaCalendar.css"/>
    <title>{{ title }}</title>
  </head>
  <body class="has-background-success-light is-flex is-flex-direction-column">
    {% if title !== "Giriş Yap" and title !== "Kayıt Ol" %}
      {% include "partials/navbar.njk" %}
    {% endif %}
    <main class="is-flex-grow-1 is-flex my-auto">
      {% block main %}{% endblock %}
    </main>
    <script src="/script/vanillaCalendar.js"></script>
    <script src="/script/main.js"></script>
    <script src="/script/fillFakeData.js"></script>
    {% if title !== "Giriş Yap" and title !== "Kayıt Ol" %}
      <script>
        const menuToggler = document.querySelector(".navbar-burger");
        const aside = document.querySelector("#aside");

        menuToggler.onclick = () => {
          const isActive = menuToggler
            .classList
            .toggle("is-active");

          menuToggler.ariaExpanded = isActive;
          aside.style.display = isActive
            ? "block"
            : "none";
        };
      </script>
    {% endif %}
    {% block footer %}{% endblock %}
  </body>
</html>